{% extends 'layout.html.twig' %}

    {% block head %}
        <title>RefClics - SOFRECOM Tunisie</title>
    {% endblock %}

{% block content %}
    <style>
        b {
            color: black;
        }
    </style>
    <!--================Start Portfolio Details Area =================-->
    <section class="portfolio_details_area section_gap" style="padding-bottom: 0px;">
        <div class="container">
            <div class="portfolio_details_inner">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="left_img">
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    {% for img in imgs %}
                                        <li data-target="#carouselExampleIndicators" style="background-color: #4458dc"
                                            data-slide-to="{{ img['slide'] }}" class="{{ img['active'] }}"></li>
                                    {% endfor %}
                                </ol>
                                <div class="carousel-inner">
                                    {% for img in imgs %}
                                        <div class="carousel-item {{ img['active'] }}">
                                            <img class="d-block w-100" src="{{ img['path'] }}" alt="{{ img['alt'] }}">
                                        </div>
                                    {% endfor %}
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                                   data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"
                                          style="background-color: blue;"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                                   data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"
                                          style="background-color: blue;"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="offset-lg-1 col-lg-5">
                        <div class="portfolio_right_text mt-30">
                            <h4 class="text-uppercase">SagemCom - Roue de Deming <img src="{{ logos['logoSociete'] }}"
                                                                                      style="max-width: 50px ; margin-bottom: 10px">
                            </h4>
                            <p>
                                Une application web qui permet d’informatiser la méthode de roue de Deming, gérer la
                                qualité et suivre toutes
                                les étapes de PDCA avec la possibilité de générer des rapports. </p>
                        </div>
                    </div>
                </div>
                <p><b>Durée :</b> 2 mois</p>
                <p><b>Equipe :</b> 1 Chef de projet, 1 PO et 1 développeur Full-Stack</p>
                <p><b>Responsabilités occupées :</b> Développeur Full-stack (Angular5 / spring boot)</p>
                <p><b>Langages et SGBD :</b> Angular5, TypeScript, Spring boot, MySQL, Apache, bootstrap3, Rest,
                    responsive design, HTML5, CSS3</p>
                <p><b>Environnements technique :</b> Spring Tool Suite, WebStorm, PostMan, Node.js, Rest, Microsoft SQL
                    server</p>
                <!--================Start Portfolio Area =================-->
                <section class="portfolio_area" id="portfolio">
                    <div class="container">
                        <div class="filters-content">
                            <div class="row portfolio-grid justify-content-center">
                                {% for img in imgs %}
                                    <div class="col-lg-4 col-md-6 all latest">
                                        <div class="portfolio_box">
                                            <div class="single_portfolio">
                                                <img class="img-fluid w-100" src="{{ img['path'] }}" alt="">
                                                <div class="overlay"></div>
                                                <a href="{{ img['path'] }}" class="img-gal">
                                                    <div class="icon">
                                                        <span class="lnr lnr-cross"></span>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </section>
                <!--================End Portfolio Area =================-->

            </div>
        </div>
    </section>
    <!--================End Portfolio Details Area =================-->
{% endblock %}
